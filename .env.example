# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================

# SECURITY WARNING: Generate a new SECRET_KEY for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: Don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
# Example: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================

REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================================================
# DATABASE CONFIGURATION (Optional - SQLite by default)
# ==============================================================================

# Uncomment and configure for PostgreSQL:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=guffgaff
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=db
# DB_PORT=5432

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# CSRF Configuration (required for production with HTTPS)
# Example: CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================

# Email backend (use SMTP for production)
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Default email addresses
DEFAULT_FROM_EMAIL=noreply@guffgaff.com
SERVER_EMAIL=server@guffgaff.com

# Admin email notifications (format: Name:email@example.com,Name2:email2@example.com)
# Example: ADMINS=Admin:admin@example.com,Support:support@example.com
ADMINS=

# ==============================================================================
# LOGGING
# ==============================================================================

# Django log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO
